function log(msg, type) {
    // Define different types of styles
    let style_main = [ "font-size: 14px", "font-family: Arial", "line-height: 2"].join(';');
    let style_1 = [ "font-size: 16px"].join(';');
    let style_2 = [ "color: blue"].join(';');
    let style_3 = [ "color: orange"].join(';');
    // Set style based on input type
    let style = style_main + ';';
    switch(type) {
        case "style1": style += style_1; break;
        case "style2": style += style_2; break;
        case "style3": style += style_3; break;
        default: break;
    }
    console.log(`%c${msg}`, style);
}

